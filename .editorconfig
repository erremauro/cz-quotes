root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Default: 2 spaces indentation
indent_style = space
indent_size = 2

[*.php]
indent_style = space
indent_size = 4
insert_final_newline = true

[*.{js,jsx,ts,tsx,json}]
indent_style = space
indent_size = 2
insert_final_newline = true

[*.{css,scss,less}]
indent_style = space
indent_size = 2
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
